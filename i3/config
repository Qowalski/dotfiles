#

# Xresources {{{

## normal
set_from_resource $black i3wm.color0 #000000
set_from_resource $red i3wm.color1 #7f0000
set_from_resource $green i3wm.color2 #007f00
set_from_resource $yellow i3wm.color3 #7f7f00
set_from_resource $blue i3wm.color4 #00007f
set_from_resource $magenta i3wm.color5 #7f007f
set_from_resource $cyan i3wm.color6 #007f7f
set_from_resource $white i3wm.color7 #7f7f7f

## bright
set_from_resource $bblack i3wm.color8 #777777
set_from_resource $bred i3wm.color9 #ff0000
set_from_resource $bgreen i3wm.color10 #00ff00
set_from_resource $byellow i3wm.color11 #ffff00
set_from_resource $bblue i3wm.color12 #0000ff
set_from_resource $bmagenta i3wm.color13 #ff00ff
set_from_resource $bcyan i3wm.color14 #00ffff
set_from_resource $bwhite i3wm.color15 #ffffff

## env
set_from_resource $background i3wm.background #373737
set_from_resource $foreground i3wm.foreground #c8c8c8

# }}}

# General {{{

mouse_warping none
focus_wrapping yes
workspace_auto_back_and_forth none
smart_gaps on
smart_borders on

# }}}

# Appearance {{{

# gaps
gaps inner 0
gaps outer 0

# border
default_floating_border normal
default_border pixel 2

# font
font pango: FontAwesome 10, Iosevka 12

# windowtitles
for_window [class=".*"] title_format "<b>%title</b>"
title_align center

# colors                border background text        indca     child_border
client.focused          $white $white     $background $bmagenta $blue
client.focused_inactive $black $black     $white      $blue     $background
client.unfocused        $black $black     $white      $blue     $background
client.urgent           $bred  $bred      $background $bred     $bred

# }}}

# Keybindings {{{

# modkeys
set $mod1 Mod4
set $mod2 Shift
set $mod3 Alt
floating_modifier $mod1

# mouse
bindsym --release      button2       kill
bindsym --whole-window $mod1+button2 kill

# kill focus
bindsym $mod1+Shift+q kill

# change focus
bindsym $mod1+h     focus left
bindsym $mod1+j     focus down
bindsym $mod1+k     focus up
bindsym $mod1+l     focus right
bindsym $mod1+Left  focus left
bindsym $mod1+Down  focus down
bindsym $mod1+Up    focus up
bindsym $mod1+Right focus right
bindsym $mod1+space focus mode_toggle

# focus container
bindsym $mod1+a focus parent
bindsym $mod1+c focus child

# move focus
bindsym $mod1+$mod2+h     move left
bindsym $mod1+$mod2+j     move down
bindsym $mod1+$mod2+k     move up
bindsym $mod1+$mod2+l     move right
bindsym $mod1+$mod2+Left  move left
bindsym $mod1+$mod2+Down  move down
bindsym $mod1+$mod2+Up    move up
bindsym $mod1+$mod2+Right move right

# split
bindsym $mod1+s       split toggle
bindsym $mod1+$mod2+s layout toggle split

# layout
bindsym $mod1+f           fullscreen toggle
bindsym $mod1+d           layout toggle splith tabbed
bindsym $mod1+$mod2+space floating toggle; \
    exec --no-startup-id ~/.config/i3/i3talk toggleBorder

# resize
bindsym $mod1+y resize shrink width  10px or 2ppt
bindsym $mod1+i resize grow   height 10px or 2ppt
bindsym $mod1+u resize shrink height 10px or 2ppt
bindsym $mod1+o resize grow   width  10px or 2ppt

# change workspace
bindsym $mod1+1 workspace $ws1
bindsym $mod1+2 workspace $ws2
bindsym $mod1+3 workspace $ws3
bindsym $mod1+4 workspace $ws4
bindsym $mod1+5 workspace $ws5
bindsym $mod1+6 workspace $ws6
bindsym $mod1+7 workspace $ws7
bindsym $mod1+8 workspace $ws8
bindsym $mod1+9 workspace $ws9
bindsym $mod1+0 workspace $ws10
bindsym $mod1+period workspace next_on_output
bindsym $mod1+comma  workspace prev_on_output

# move container
bindsym $mod1+$mod2+1 move container to workspace $ws1 workspace $ws1
bindsym $mod1+$mod2+2 move container to workspace $ws2 workspace $ws2
bindsym $mod1+$mod2+3 move container to workspace $ws3 workspace $ws3
bindsym $mod1+$mod2+4 move container to workspace $ws4 workspace $ws4
bindsym $mod1+$mod2+5 move container to workspace $ws5 workspace $ws5
bindsym $mod1+$mod2+6 move container to workspace $ws6 workspace $ws6
bindsym $mod1+$mod2+7 move container to workspace $ws7 workspace $ws7

# move container to monitor
bindsym $mod1+$mod2+comma  move workspace to output DisplayPort-1
bindsym $mod1+$mod2+period move workspace to output HDMI-A-1

# scratchpad
bindsym $mod1+n       scratchpad show
bindsym $mod1+$mod2+n move scratchpad

# i3
bindsym $mod1+$mod2+r restart

# switch keyboard layout
bindsym $mod1+$mod2+BackSpace exec --no-startup-id keyboard-switch

# dmenu run
bindsym $mod1+r exec --no-startup-id \
                    dmenu_run -i -p "run" \
                    -fn "Iosevka-13"  -y 1 \
                    -nb "$black"  -nf "$white" \
                    -sb "$bblack" -sf "$black"

# dmenu lutris
bindsym $mod1+$mod2+g exec --no-startup-id \
                    lutris-dmenu -i -p lutris \
                    -fn "Iosevka-13"  -y 1\
                    -nb "$black" -nf "$foreground" \
                    -sb "$bblue" -sf "$background"

# terminal
bindsym $mod1+Return exec --no-startup-id st

# browser
bindsym $mod1+$mod2+b exec --no-startup-id firefox

# spotify
bindsym $mod1+$mod2+m exec --no-startup-id spotify

# audio
bindsym XF86AudioMute exec --no-startup-id pulsemixer --toggle-mute

# volume up
bindsym XF86AudioRaiseVolume exec --no-startup-id \
                                pulsemixer --change-volume +5 \
                                && notification volume

# volume down
bindsym XF86AudioLowerVolume exec --no-startup-id \
                                pulsemixer --change-volume -5 \
                                && notification volume

# next song
bindsym XF86AudioNext exec --no-startup-id playerctl next

# previous song
bindsym XF86AudioPrev exec --no-startup-id playerctl previous

# play/pause
bindsym XF86AudioPlay exec --no-startup-id playerctl play-pause

# }}}

# Workspaces {{{

set $ws1 "1:<b>term</b>"
set $ws2 "2:<b>media</b>"
set $ws3 "3:<b>web</b>"
set $ws4 "4:<b>steam</b>"
set $ws5 "5:<b>games</b>" layout tabbed
set $ws6 "6:<b>misc</b>"

# }}}

# Applications {{{

# Spotify
for_window [class="Spotify"] move to workspace $ws2

# Firefox
assign [class="firefox"] $ws3

# Steam
assign [class="Steam"] $ws4

# TeamSpeak
for_window [class="TeamSpeak 3"] move to workspace $ws5

# Thunar
for_window [class="Thunar"] floating enable border normal

# Keepass
for_window [class="KeePass2"] floating enable border normal position center

## Games
for_window [class="minecraft-launcher"] move workspace $ws5
for_window [class="Wine"] move workspace $ws5

# }}}

# Bar {{{

bar {
    i3bar_command i3bar
    status_command i3blocks
    position top

    workspace_buttons yes
    tray_output none
    tray_padding -10

    strip_workspace_numbers yes
    strip_workspace_name no

    separator_symbol "<"

    colors {
        background $black
        statusline $bwhite
        separator $white

        #                   border     background foreground
        focused_workspace   $black     $black     $bblue
        active_workspace    $black     $black     $bblue
        inactive_workspace  $black     $black     $white
        urgent_workspace    $black     $black     $bred
        binding_mode        $bamagenta $bmagenta  $background
    }
}

# }}}

# Autostart {{{

# compton
exec_always --no-startup-id \
    pgrep compton \
    && killall -s USR1 compton \
    || compton --config ~/.config/compton/config

# dunst
exec_always --no-startup-id \
    killall dunst; dunst \
    -geom "0x0-0+26" -fn "Iosevka 12" \
    -lf  "$white"    -nf  "$black"  -cf  "$background" \
    -lb  "$black"    -nb  "$bblack" -cb  "$bred" \
    -lfr "$black"    -nfr "$bblack" -cfr "$bred"

# wallpaper
exec_always --no-startup-id \
    feh --bg-scale $HOME/pictures/wallpapers/wallpaper.png

# notifications
exec --no-startup-id notification notes
exec --no-startup-id notification updates
exec --no-startup-id trsh --notify

exec --no-startup-id thunar --daemon

# MOVE THIS FUCKER ON ITS GOD DAMN PLACE!!!
exec --no-startup-id xdotool mousemove 960 540

# }}}

